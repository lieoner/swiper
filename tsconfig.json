{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "./src/shared/assets/*"
      ],
      "@constants/*": [
        "./src/shared/constants/*"
      ],
      "@theme/*": [
        "./src/shared/theme/*"
      ],
      "@navigationTypes": [
        "./src/app/navigation/types"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@src/*": [
        "./src/*"
      ],
    },
    "rootDirs": [
      "."
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "./src"
  ],
  "files": [
    "./index.d.ts"
  ]
}